<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Peminjaman"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Id Alat" />
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text=":"/>

        <TextView
            android:id="@+id/edt_id_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Id Alat"
            android:text="Id Alat" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Nama Alat" />
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text=":"/>

        <TextView
            android:id="@+id/edt_nama_alat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Alat"
            android:text="Nama Alat" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="ITEM ID" />
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text=":"/>

        <TextView
            android:id="@+id/edt_item_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Item Id"
            android:text="Item Id" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Kondisi Sebelum" />
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text=":"/>

        <EditText
            android:id="@+id/edt_kondisi_sebelum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kondisi Sebelum" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Id Peminjam" />
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text=":"/>

        <EditText
            android:id="@+id/edt_id_peminjam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Id Peminjam" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Nama Peminjam" />
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text=":"/>

        <EditText
            android:id="@+id/edt_nama_peminjam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Peminjam" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="No Telfon" />
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text=":"/>

        <EditText
            android:id="@+id/edt_no_telfon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No Telfon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Alamat Email" />
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text=":"/>

        <EditText
            android:id="@+id/edt_alamat_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alamat Email" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Tanggal Pinjam" />
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text=":"/>

        <EditText
            android:id="@+id/edt_tanggal_pinjam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tanggal Pinjam" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Tanggal Pengembalian" />
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text=":"/>

        <EditText
            android:id="@+id/edt_tanggal_pengembalian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tanggal Pengembalan" />

    </LinearLayout>



    <Button
        android:id="@+id/btn_insertdata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBMIT" />

    <Button
        android:id="@+id/btntampildata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meusuring Tools" />

</LinearLayout>